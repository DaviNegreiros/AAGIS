        <a id="slogan">Atualizações Acadêmicas Gerais, Indispensáveis e Sucintas</a>

    </div>
    <!-- area postagem-->
    <div class="container">
        <div class="Title-box">
            <h1>Editar Notícia</h1>
        </div>
        <div class="fakeModal">
            <div class="fakeModal-conteudo">
                <form action="/attnoticia/{{noticia.id}}" method="POST" enctype="multipart/form-data">
                    <div class="fakeModal1">
                        <!-- botão imagem -->
                        <div class="btnImg">
                            <label class="picture" for="picture__input" tabIndex="0">
                                <span class="picture__image"></span>
                            </label>
                            <input type="file" name="picture__input" id="picture__input">
                        </div>
                        <!-- FIM botão imagem -->
                    </div>
                    <div class="input-texto">
                        <textarea name="titulopost" placeholder="Digite o título..." class="title">{{titulo}}</textarea><br>
                        <textarea name="subtitulopost" placeholder="Digite o subtítulo..." class="subtitle">{{subtitulo}}</textarea><br>
                        <textarea name="conteudopost" placeholder="Digite o texto..." class="text">{{conteudo}}</textarea><br>
                                            
                            <div id="checkbox-container">
                                <label><input type="checkbox" name="categoria" value="categoria1"> Engenharias</label>
                                <label><input type="checkbox" name="categoria" value="categoria2"> Eng. Software</label>
                                <label><input type="checkbox" name="categoria" value="categoria3"> Eng. Automotiva</label>
                                <label><input type="checkbox" name="categoria" value="categoria4"> Eng. Aeroespacial</label>
                                <label><input type="checkbox" name="categoria" value="categoria5"> Eng. Eletrônica</label>
                                <label><input type="checkbox" name="categoria" value="categoria6"> Eng. Energia</label>
                            </div> <br>
                            <div class="data-hora" id="dateTimeForm">

                            <label for="date">Data:</label>
                            <input type="date" id="date" name="date">

                            <label for="time">Hora:</label>
                            <input type="time" id="time" name="time"> 
                            </div>
                        <button type="submit">Enviar</button>
                    </div>

            </div>
        </div>


