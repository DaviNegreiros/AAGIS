<!DOCTYPE html>
<html lang="en">

<head>
    <title>Editar Noticia</title>
    <link rel="stylesheet" href="/{{style}}">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style type='text/css'></style>
</head>

<body>
    <script defer src="scriptsPost.js"></script>
    <script async src="scriptsPost.js"></script>


    <div class="header">
        <div class="HeaderRow">
            <div class="home" onclick="homeFunction()">
                <h1 id="HOME">AAGIS</h1>
                <div id="imgPadding">
                    <img src="imagens/unb_logo.png" alt="Logo UnB">
                </div>
            </div>
        </div>

        <a id="slogan">Atualizações Acadêmicas Gerais, Indispensáveis e Sucintas</a>

    </div>
    <!-- area postagem-->
    <div class="container">
        <div class="Title-box">
            <h1>Editar Notícia</h1>
        </div>
        <div class="fakeModal">
            <div class="fakeModal-conteudo">
                <form action="/attnoticia/{{noticia.id}}" method="POST" enctype="multipart/form-data">
                    <div class="fakeModal1">
                        <!-- botão imagem -->
                        <div class="btnImg">
                            <label class="picture" for="picture__input" tabIndex="0">
                                <span class="picture__image">
                                    <img src={{noticia.ref_imagem}} class="picture__img">
                                </span>
                            </label>
                            <input type="file" name="picture__input" id="picture__input">
                        </div>
                        <!-- FIM botão imagem -->
                    </div>
                    <div class="input-texto">
                        <textarea name="titulopost" placeholder="Digite o título..." class="title">{{noticia.titulopost}}</textarea><br>
                        <textarea name="subtitulopost" placeholder="Digite o subtítulo..." class="subtitle">{{noticia.subtitulopost}}</textarea><br>
                        <textarea name="conteudopost" placeholder="Digite o texto..." class="text">{{conteudo}}</textarea><br>

                        <div id="checkbox-container">
                            <label><input type="checkbox" name="curso" value="Engenharias">Engenharias</label>
                            <label><input type="checkbox" name="curso" value="Eng. Software"> Engenharia de Software</label>
                            <label><input type="checkbox" name="curso" value="Eng. Automotiva"> Engenharia Automotiva</label>
                            <label><input type="checkbox" name="curso" value="Eng. Aeroespacial"> Engenharia Aeroespacial</label>
                            <label><input type="checkbox" name="curso" value="Eng. Eletrônica"> Engenharia Eletrônica</label>
                            <label><input type="checkbox" name="curso" value="Eng. Energia"> Engenharia de Energia</label>
                        </div> <br>
                        <div class="data-hora" id="dateTimeForm">

                            <label for="date">Data:</label>
                            <input type="date" id="date" name="date" min="2024-01-01" max="2099-12-31">

                            <label for="time">Hora:</label>
                            <input type="time" id="time" name="time">
                        </div>
                        <button type="submit">Editar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


